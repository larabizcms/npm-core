{
    "compilerOptions": {
        "baseUrl": "./src/",
        "jsx": "react",
        "target": "ES6",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "nodenext",
        "module": "NodeNext",
        "allowSyntheticDefaultImports": true
    },
